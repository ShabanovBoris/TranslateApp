<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/primaryDarkColor"
    android:layout_marginBottom="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="?attr/textAppearanceHeadline3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Word"
            android:layout_marginStart="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_translate_1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:layout_marginEnd="32dp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@+id/b_translate_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/primaryTextColor"
            app:strokeWidth="2dp"
            tools:text="Translated" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_translate_2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:layout_marginEnd="32dp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@+id/b_translate_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_translate_1"
            app:strokeColor="@color/primaryTextColor"
            app:strokeWidth="2dp"
            tools:text="Translated" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_translate_3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceHeadline4"
            app:cornerRadius="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/b_translate_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_translate_2"
            app:strokeColor="@color/primaryTextColor"
            app:strokeWidth="2dp"
            tools:text="Translated" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_translate_4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:padding="8dp"
            app:cornerRadius="16dp"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_translate_3"
            app:strokeColor="@color/primaryTextColor"
            app:strokeWidth="2dp"
            tools:text="Translated" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>